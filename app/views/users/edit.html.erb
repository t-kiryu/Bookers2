<p id="notice"></p>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
      <h2>User info</h2>

        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, id:"inputName", placeholder:"名前", class:"form-control name" %>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label>
          <%= f.file_field :profile_image, placeholder:"プロフィール画像", accept: "image/*", class:"form-control-file user_image" %>
        </div>
        <div class="form-group">
          <label for="inputIntroduction">Introduction</label>
          <%= f.text_area :introduction, class:"form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update User', class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>