<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">

  <%= render 'books/userinfo', books: @books , user: @user %>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan=3></th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td><%= image_tag @user.get_profile_image(100,100) %></td>
            <td>book.title, book_path(book.id)</td>
